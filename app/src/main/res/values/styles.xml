<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/defaultBackground</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">

    </style>
    
    <style name="PostStatusTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/contentColor</item>
        <item name="android:fontFamily">@font/dana_regular_digits</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">none</item>
    </style>

    <style name="PostStatusImageStyle">
        <item name="android:padding">@dimen/detailedpostcontent_statusimage_padding</item>
    </style>

</resources>
