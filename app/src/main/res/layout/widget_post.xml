<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/container_post"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"

        android:elevation="2dp"
        android:alpha="0.9"
        android:background="@drawable/item_background"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"

        android:elevation="2dp"
        android:clipChildren="false"
        android:clipToPadding="false">

        <ImageView
            android:id="@+id/image_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/postitem_padding_left"
            android:layout_marginRight="@dimen/postitem_padding_right"
            android:layout_marginTop="@dimen/postitem_padding_vertical"
            android:layout_marginBottom="@dimen/postitem_padding_vertical"

            android:scaleType="centerInside"/>

    </FrameLayout>

</FrameLayout>