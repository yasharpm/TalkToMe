<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        app:srcCompat="@drawable/passivelogo"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/passivelogo_name_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/passivelogo_name_margin_top"

        android:adjustViewBounds="true"
        app:srcCompat="@drawable/appname_farsi"
        app:tint="@color/passivelogo_logo_background"/>

</LinearLayout>